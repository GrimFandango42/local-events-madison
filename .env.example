# Environment Variables Template
# Copy this to .env.local and fill in your values

# Database (use SQLite by default for local dev; switch to Postgres for prod)
DATABASE_URL="file:./dev.db"

# Redis (for caching and job queues)
REDIS_URL="redis://localhost:6379"

# Optional: Firecrawl API key (for enhanced scraping)
FIRECRAWL_API_KEY="your_firecrawl_api_key_here"

# Next.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Local Events API base URL (used by ChatGPT connector)
LOCAL_EVENTS_API_URL="http://localhost:3000"

# MCP Configuration (optional)
MCP_SERVER_PORT=3001

# Development
NODE_ENV="development"
