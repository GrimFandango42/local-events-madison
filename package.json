{
  "name": "local-events",
  "version": "1.0.0",
  "description": "Madison event discovery platform - Facebook-free event aggregation",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "src",
    "test": "tests"
  },
  "scripts": {
    "dev": "next dev -p 5000 -H 0.0.0.0",
    "dev:oneclick": "node scripts/one-click-dev.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "npm run db:generate && npm run db:push && jest",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test",
    "test:scraper": "node scripts/test-scrapers.js",
    "start:collector": "tsx backend/services/MCPEventCollector.ts",
    "scrape:once": "tsx backend/services/run-once.ts",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/create-sample-data.js",
    "setup": "node scripts/quick-setup.js",
    "setup:city": "node scripts/quick-setup.js",
    "config:validate": "node scripts/validate-config.js",
    "links:check": "tsx scripts/check-links.ts",
    "purge:old": "tsx scripts/purge-old-events.ts",
    "dev:clean": "node scripts/dev-clean.js",
    "analyze": "node scripts/analyze-bundle.js",
    "perf:test": "node scripts/performance-test.js",
    "perf:monitor": "npm run perf:test && npm run analyze",
    "lint:perf": "eslint . --ext .ts,.tsx --max-warnings 0",
    "security:audit": "npm audit --audit-level high",
    "security:scan": "tsx scripts/security-scan.ts",
    "validate:env": "tsx scripts/validate-env.ts"
  },
  "keywords": [
    "events",
    "madison",
    "scraping",
    "mcp",
    "local-events",
    "event-discovery",
    "wisconsin",
    "nextjs",
    "chatgpt-connector",
    "facebook-alternative",
    "privacy-focused",
    "venue-scraping",
    "event-aggregation"
  ],
  "author": "Local Events Platform",
  "license": "MIT",
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.0.0",
    "critters": "^0.0.23",
    "googleapis": "^159.0.0",
    "lucide-react": "^0.294.0",
    "luxon": "^3.4.4",
    "next": "^14.0.0",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "playwright": "^1.46.0",
    "prisma": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "redis": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/core": "^7.25.0",
    "@babel/runtime": "^7.25.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jest": "^29.0.0",
    "@types/luxon": "^3.4.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "c8": "^9.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-testing-library": "^6.0.0",
    "happy-dom": "^12.0.0",
    "jest": "^29.0.0",
    "jest-environment-node": "^29.7.0",
    "msw": "^2.0.0",
    "node-mocks-http": "^1.14.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tsx": "^4.19.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "optionalDependencies": {
    "@mendable/firecrawl-js": "^4.3.3",
    "@playwright/mcp": "^0.0.36"
  }
}
